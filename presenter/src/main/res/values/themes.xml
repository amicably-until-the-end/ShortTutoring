<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.ShortTutoring" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/secondary_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Component Default -->
        <item name="android:textColorTertiary">@color/black</item>
        <!-- Status rbar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:timePickerStyle">@style/TimePickerStyle</item>
        <item name="android:textViewStyle">@style/PretendardTextView</item>
        <item name="android:buttonStyle">@style/PretendardButton</item>
        <item name="android:editTextStyle">@style/PretendardEditText</item>
        <item name="android:checkboxStyle">@style/PretendardCheckBox</item>
        <item name="android:radioButtonStyle">@style/PretendardRadioButton</item>
        <item name="editTextStyle">@style/PretendardEditText</item>
        <item name="radioButtonStyle">@style/PretendardRadioButton</item>
    </style>
</resources>
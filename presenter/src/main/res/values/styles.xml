<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="PretendardTextView">
        <item name="android:background">@drawable/bg_radius_20_20_0_0</item>
    </style>

    <style name="calendar_day_black" parent="PretendardTextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="calendar_day_grey" parent="PretendardTextView">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="section_title" parent="PretendardTextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="item_title" parent="PretendardTextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="content_title" parent="PretendardTextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="content_detail" parent="PretendardTextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="TimePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:timePickerMode">spinner</item>
    </style>

    <style name="sub_text_grey" parent="PretendardTextView">
        <item name="android:textColor">@color/sub_text_grey</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="sub_text_black" parent="PretendardTextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="sub_text_blue" pparent="PretendardTextView">
        <item name="android:textColor">@color/primary_blue</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="safeButtonEnabled" parent="PretendardButton">
        <item name="android:background">@drawable/bg_radius_5_grad_blue</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="chatTextRight" parent="PretendardTextView">
        <item name="backgroundTint">@color/primary_blue</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="chatTextLeft" parent="PretendardTextView">
        <item name="backgroundTint">@color/white</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="safeButtonDisabled" parent="PretendardButton">
        <item name="android:background">@color/background_grey</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="h1" parent="PretendardTextView" />

    <style name="h2" parent="PretendardTextView" />

    <style name="h3" parent="PretendardTextView" />

    <style name="h4" parent="PretendardTextView" />

    <style name="h5" parent="PretendardTextView" />

    <style name="h6" parent="PretendardTextView" />

    <style name="subtitle2" parent="PretendardTextView" />

    <style name="body1" parent="PretendardTextView" />

    <style name="body2" parent="PretendardTextView" />

    <style name="button" parent="PretendardTextView" />

    <style name="colorPallet">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:layout_marginHorizontal">4dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">15dp</item>
    </style>

    <style name="ToolBar">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="background">@color/white</item>
        <item name="addElevationShadow">true</item>
    </style>

    <style name="ToolBarTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="android:layout_marginLeft">40dp</item>

    </style>


    <style name="ToolBarAppName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:text">숏과외</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>


    <style name="ToolBarBackButton">
        <item name="android:scaleType">fitXY</item>
        <item name="android:background">@drawable/ic_chevron_left</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="backgroundTint">@color/black</item>
    </style>

    <style name="PretendardTextView" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/app_font</item>
    </style>

    <style name="PretendardButton" parent="@android:style/Widget.DeviceDefault.Button">
        <item name="android:fontFamily">@font/app_font</item>
    </style>

    <style name="PretendardEditText" parent="@android:style/Widget.DeviceDefault.EditText">
        <item name="android:fontFamily">@font/app_font</item>
    </style>

    <style name="PretendardRadioButton" parent="@android:style/Widget.DeviceDefault.CompoundButton.RadioButton">
        <item name="android:fontFamily">@font/app_font</item>
    </style>

    <style name="PretendardCheckBox" parent="@android:style/Widget.DeviceDefault.CompoundButton.CheckBox">
        <item name="android:fontFamily">@font/app_font</item>
    </style>


</resources>
<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_radius_20_20_0_0</item>
    </style>

    <style name="section_title" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="item_title" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="TimePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:timePickerMode">spinner</item>
    </style>

    <style name="sub_text_grey" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/sub_text_grey</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="sub_text_black" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="sub_text_blue" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/primary_blue</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="safeButtonEnabled">
        <item name="android:background">@drawable/bg_radius_5_grad_blue</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="safeButtonDisabled">
        <item name="android:background">@color/background_grey</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="h1" parent="TextAppearance.MaterialComponents.Headline1" />

    <style name="h2" parent="TextAppearance.MaterialComponents.Headline2" />

    <style name="h3" parent="TextAppearance.MaterialComponents.Headline3" />

    <style name="h4" parent="TextAppearance.MaterialComponents.Headline4" />

    <style name="h5" parent="TextAppearance.MaterialComponents.Headline5" />

    <style name="h6" parent="TextAppearance.MaterialComponents.Headline6" />

    <style name="subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2" />

    <style name="body1" parent="TextAppearance.MaterialComponents.Body1" />

    <style name="body2" parent="TextAppearance.MaterialComponents.Body2" />

    <style name="button" parent="TextAppearance.MaterialComponents.Button" />

    <style name="ToolBar">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="background">@color/white</item>
        <item name="addElevationShadow">true</item>
    </style>

    <style name="ToolBarTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="android:layout_marginLeft">40dp</item>

    </style>


    <style name="ToolBarAppName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:text">숏과외</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>


    <style name="ToolBarBackButton">
        <item name="android:scaleType">fitXY</item>
        <item name="android:background">@drawable/ic_chevron_left</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="backgroundTint">@color/black</item>
    </style>
</resources>
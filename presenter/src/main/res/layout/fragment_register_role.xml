<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.RegisterRoleFragment">

    <TextView
        android:id="@+id/tv_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="어떤 회원으로 가입할까요?"
        android:textColor="@color/black"
        style="@style/h6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/margin_top_default"
        android:layout_marginStart="@dimen/margin_horizontal_default"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/tv_student"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="학생으로 가입하기"
        android:textColor="@color/black"
        android:gravity="center"
        style="@style/button"
        android:background="@drawable/corner_radius_10"
        app:layout_constraintTop_toBottomOf="@id/tv_question"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp"
        android:layout_marginHorizontal="@dimen/margin_horizontal_default"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/tv_teacher"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="선생님으로 가입하기"
        android:textColor="@color/black"
        style="@style/button"
        android:background="@drawable/corner_radius_10"
        app:layout_constraintTop_toBottomOf="@+id/tv_student"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="@dimen/margin_horizontal_default"/>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#11000000"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:layout_marginBottom="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="400dp">

            <ImageView
                android:id="@+id/iv_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="#33000000" />

            <TextView
                android:id="@+id/tv_difficulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:text="어려움"
                android:textSize="@dimen/text_medium"
                android:textColor="#AAFF0000"
                android:textStyle="bold"
                android:background="@android:color/white"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="20dp"
            android:paddingHorizontal="10dp">

            <LinearLayout
                android:id="@+id/container_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="과목"
                    android:textSize="@dimen/text_medium"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_subject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="수학1"
                    android:textSize="@dimen/text_medium"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="@dimen/text_medium"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/tv_chapter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="지수함수"
                    android:textSize="@dimen/text_medium"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/container_description_of_student"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/container_subject"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="학생 설명"
                    android:textSize="@dimen/text_medium"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_desciption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="못 풀겠어요"
                    android:textSize="@dimen/text_medium"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

            <!--
            <LinearLayout
                android:id="@+id/container_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/container_description_of_student"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <TextView
                    android:id="@+id/tv_review_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#이해가 빨라요"
                    android:textSize="@dimen/text_medium"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/tv_review_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#개념을 잘 이해하고 있어요"
                    android:textSize="@dimen/text_medium"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/tv_review_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#자신감이 넘쳐요"
                    android:textSize="@dimen/text_medium"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>
            -->

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
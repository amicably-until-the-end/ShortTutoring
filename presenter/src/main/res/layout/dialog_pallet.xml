<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="Theme.Panel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:layout_constraintLeft_toLeftOf="@id/container_tool_appliances"
    app:layout_constraintTop_toBottomOf="parent">

    <LinearLayout
        android:id="@+id/container_color_pallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btn_pen_red"
            style="@style/colorPallet"
            app:cardBackgroundColor="@color/pen_red" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btn_pen_orange"
            style="@style/colorPallet"
            app:cardBackgroundColor="@color/pen_orange" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btn_pen_yellow"
            style="@style/colorPallet"
            app:cardBackgroundColor="@color/pen_yellow" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btn_pen_green"
            style="@style/colorPallet"
            app:cardBackgroundColor="@color/pen_green" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btn_color_black"
            style="@style/colorPallet"
            app:cardBackgroundColor="@color/pen_black" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btn_pen_purple"
            style="@style/colorPallet"
            app:cardBackgroundColor="@color/pen_purple" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
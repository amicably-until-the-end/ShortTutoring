<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".question_upload.QuestionCameraFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="-20dp"
        android:background="@color/light_grey"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toTopOf="@id/container_btns"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <org.softwaremaestro.presenter.question_upload.CameraTextureView
                android:id="@+id/textureView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <TextView
                    android:id="@+id/tv_capture_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="질문할 문제를 촬영해주세요. (최대 5장)"
                    android:textColor="@color/white"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_capture_desc">

                    <include
                        android:id="@+id/iv_capture_1"
                        layout="@layout/item_capture_preview" />

                    <include
                        android:id="@+id/iv_capture_2"
                        layout="@layout/item_capture_preview" />

                    <include
                        android:id="@+id/iv_capture_3"
                        layout="@layout/item_capture_preview" />

                    <include
                        android:id="@+id/iv_capture_4"
                        layout="@layout/item_capture_preview" />

                    <include
                        android:id="@+id/iv_capture_5"
                        layout="@layout/item_capture_preview" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_btns"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:paddingHorizontal="70dp"
        android:paddingBottom="45dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_gallery"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/baseline_add_photo_alternate_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_shutter"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_camera_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_flash"
            android:layout_width="56dp"
            android:layout_height="38dp"
            android:background="@drawable/border_radius_18"
            android:backgroundTint="@color/white"
            android:gravity="center"
            android:text="다음"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_teacher_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/iv_teacher_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_teacherName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="선생님 이름"
        app:layout_constraintLeft_toRightOf="@id/iv_teacher_img"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_teacher_school"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="00대학교"
        app:layout_constraintLeft_toRightOf="@id/tv_teacherName"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_teacher_bio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="선생님 한줄소개"
        app:layout_constraintLeft_toLeftOf="@id/tv_teacherName"
        app:layout_constraintTop_toBottomOf="@id/tv_teacherName" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_accept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="과외 신청하기"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/iv_teacher_img" />

</androidx.constraintlayout.widget.ConstraintLayout>
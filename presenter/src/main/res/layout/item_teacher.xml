<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true"
    android:layout_marginBottom="24dp">

    <LinearLayout
        android:id="@+id/view_teacher_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#0A000000"
        android:padding="24dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cv_teacher_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_teacher_img"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_circle_light_gray_10"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_teacherName"
                style="@style/subtitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:textColor="@color/black"
                app:layout_constraintBottom_toTopOf="@id/tv_teacher_school"
                app:layout_constraintStart_toEndOf="@id/iv_teacher_img"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="유정연 선생님" />

            <TextView
                android:id="@+id/tv_teacher_school"
                style="@style/subtitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="서울대학교 수의예과"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_teacher_img"
                android:layout_marginTop="12dp"/>

            <TextView
                android:id="@+id/tv_likes"
                style="@style/subtitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_teacher_school"
                android:layout_marginTop="12dp"
                tools:text=" · 찜한 학생 23명" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_accept"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corner_radius_10"
            android:gravity="center"
            android:paddingVertical="12dp"
            android:text="과외 신청하기"
            android:textAlignment="center"
            android:textColor="@color/black"
            style="@style/button"
            android:layout_marginTop="24dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
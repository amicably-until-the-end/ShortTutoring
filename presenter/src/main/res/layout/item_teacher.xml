<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_teacher_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rectangle_20"
    android:backgroundTint="#d0d0d0"
    android:padding="20dp"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_teacher_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_teacher_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_teacherName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="선생님 이름"
        android:textColor="@color/black"

        android:textSize="@dimen/text_medium"
        app:layout_constraintLeft_toRightOf="@id/cv_teacher_img"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_teacher_school"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00대학교"
        android:textColor="@color/black"
        android:textSize="@dimen/text_medium"
        app:layout_constraintLeft_toLeftOf="@id/tv_teacherName"
        app:layout_constraintTop_toBottomOf="@id/tv_teacherName" />

    <TextView
        android:id="@+id/tv_teacher_bio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="찜한 학생"
        android:textColor="@color/black"
        android:textSize="@dimen/text_medium"
        app:layout_constraintLeft_toRightOf="@id/tv_teacher_school"
        app:layout_constraintTop_toTopOf="@id/tv_teacher_school" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_accept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_rectangle_6"
        android:backgroundTint="#909090"
        android:gravity="center"
        android:paddingVertical="8dp"
        android:text="과외 신청하기"
        android:textAlignment="center"
        android:textSize="@dimen/text_small"
        app:layout_constraintTop_toBottomOf="@id/cv_teacher_img"
        tools:layout_editor_absoluteX="24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.LogoFragment">

    <TextView
        android:id="@+id/tv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ShortTutoring"
        android:textColor="@android:color/black"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_login_by_google"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="구글 계정으로 시작하기"
        android:textColor="@color/black"
        style="@style/button"
        android:background="@drawable/corner_radius_10"
        android:padding="16dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/btn_login_by_kakao"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="32dp"
        android:layout_marginHorizontal="@dimen/margin_horizontal_default" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_login_by_kakao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="카카오 계정으로 시작하기"
        android:textColor="@color/black"
        style="@style/button"
        android:background="@drawable/corner_radius_10"
        android:padding="16dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="56dp"
        android:layout_marginHorizontal="@dimen/margin_horizontal_default" />

</androidx.constraintlayout.widget.ConstraintLayout>